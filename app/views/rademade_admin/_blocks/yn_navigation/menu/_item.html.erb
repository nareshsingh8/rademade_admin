<% 
  has_sub_items = menu_item[:sub].is_a?(Array) && menu_item[:sub].size > 0 && menu_item[:sub].any? { |sub| sub[:uri] }
  uri = menu_item[:uri]
  if has_sub_items || uri
  is_active = active?(menu_item) 
%>
<li class="list">
  <a href="<%= uri %>" class="<%
    if is_active
        %> is-active<%
    end
    if has_sub_items
        %> with-dd<%
    end
    %>">
    <span class="title"><%= menu_item[:name] %></span>
  </a>
  <%
    if has_sub_items && (is_active || uri.nil?)
      %><ul class="yn-nav-dd<%
          if uri.nil? && !is_active
              %> hide<%
          end
      %>"><%
          menu_item[:sub].each do |sub_item|
              concat render @template_service.navigation_menu_item_block, {
                  :menu_item => sub_item
              }
          end
      %></ul><%
    end
  %>  
</li>
<%end %>